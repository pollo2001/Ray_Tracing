{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "build C99",
		"type": "shell",
		"command": "gcc",
		"args": [
		  "-std=c99",
		  "-o", "${fileDirname}/${fileBasenameNoExtension}",
		  "${file}",
		  "-lm",
		  "-I/opt/homebrew/include",  // For Apple Silicon Mac
		  "-L/opt/homebrew/lib",      // For Apple Silicon Mac
		  "-lSDL2"
		],
		
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"detail": "Generated task for building C99 code on macOS"
	  }
	]
  }
  